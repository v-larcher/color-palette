{
  "env":{
     "node":true,
     "es2021":true
  },
  "parserOptions":{
     "ecmaFeatures":{
        "jsx":true
     },
     "ecmaVersion":12,
     "sourceType":"module"
  },
  "extends":[
     "eslint:recommended",
     "prettier",
     "plugin:import/errors",
     "plugin:import/warnings",
     "next",
     "next/core-web-vitals"
  ],
  "plugins":[
     "import"
  ],
  "settings":{
     "import/resolver":{
        "node":{
           "extensions":[
              ".js",
              ".jsx"
           ],
           "moduleDirectory":[
              "node_modules",
              "src/"
           ]
        }
     }
  },
  "rules":{
    "react/self-closing-comp": ["error", {
       "component": true,
       "html": true
     }],
     "import/no-unresolved":"off",
     "import/first":"error",
     "import/newline-after-import":"error",
     "import/no-duplicates":"error",
     "import/order":[
        "error",
        {
           "groups":[
              "builtin",
              "external",
              "internal",
              [
                 "sibling",
                 "parent",
                 "index"
              ]
           ],
           "pathGroups":[
              {
                 "pattern":"react",
                 "group":"external",
                 "position":"before"
              }
           ],
           "pathGroupsExcludedImportTypes":[
              "builtin"
           ],
           "newlines-between":"always",
           "alphabetize":{
              "order":"asc",
              "caseInsensitive":true
           }
        }
     ]
  }
}